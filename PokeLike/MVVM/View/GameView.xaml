<UserControl
    x:Class="PokeLike.MVVM.View.GameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:PokeLike.MVVM.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PokeLike.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=VM:GameViewVM}"
    d:DesignHeight="750"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ImageBrush
            x:Key="Combat"
            AlignmentY="Top"
            ImageSource="\Ressources\Images\combat.png"
            Stretch="Uniform" />
    </UserControl.Resources>
    <Border Background="Purple">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="3.75*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Grid.RowSpan="4"
                Grid.ColumnSpan="6"
                Background="{StaticResource Combat}" />
            <Image
                Grid.RowSpan="4"
                Grid.Column="4"
                Width="236"
                Height="236"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/1.png" />
            <Image
                Grid.Row="2"
                Grid.RowSpan="3"
                Grid.Column="1"
                Width="238"
                Height="238"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Source="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/back/35.png"
                Stretch="UniformToFill" />
        </Grid>
    </Border>

</UserControl>

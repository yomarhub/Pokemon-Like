                 Height="400"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Background="#3FFFFFFF"
                 ItemTemplate="{StaticResource PokeList}"
                 ItemsSource="{Binding Pokemons}"
                 SelectedItem="{Binding SelectedPokemon}" />

<Window
    x:Class="PokeLike.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PokeLike"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:PokeLike.MVVM.View"
    xmlns:vm="clr-namespace:PokeLike.MVVM.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowVM}"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MainViewVM}">
            <view:MainView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoginViewVM}">
            <view:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewVM}">
            <view:SettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GameViewVM}">
            <view:GameView />
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundImage}">
        <ContentControl Content="{Binding CurrentVM}" />
    </Grid>
</Window>
